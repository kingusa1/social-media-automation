# ========================================
# Social Media Automation - Configuration
# ========================================

# Application
SECRET_KEY=change-me-to-a-random-string
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Database
# Local: sqlite:///./automation.db
# Vercel (Neon Postgres): postgresql://user:pass@host/dbname?sslmode=require
DATABASE_URL=sqlite:///./automation.db

# Vercel deployment URL (set this to your Vercel domain)
# Used for LinkedIn OAuth redirect
APP_URL=http://localhost:8000

# Vercel Cron Secret (protects cron endpoints from unauthorized access)
CRON_SECRET=your-random-cron-secret

# ----------------------------------------
# Pollinations AI (OpenAI-compatible)
# ----------------------------------------
POLLINATIONS_API_KEY=
POLLINATIONS_API_BASE=https://text.pollinations.ai/openai
POLLINATIONS_PRIMARY_MODEL=chickytutor
POLLINATIONS_FALLBACK_MODELS=openai,mistral,gemini

# ----------------------------------------
# LinkedIn OAuth2
# Create app at: https://www.linkedin.com/developers/apps
# ----------------------------------------
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/auth/linkedin/callback

# ----------------------------------------
# Twitter/X API - Infiniteo
# ----------------------------------------
TWITTER_INFINITEO_API_KEY=
TWITTER_INFINITEO_API_SECRET=
TWITTER_INFINITEO_ACCESS_TOKEN=
TWITTER_INFINITEO_ACCESS_SECRET=

# ----------------------------------------
# Twitter/X API - YourOps
# ----------------------------------------
TWITTER_YOUROPS_API_KEY=
TWITTER_YOUROPS_API_SECRET=
TWITTER_YOUROPS_ACCESS_TOKEN=
TWITTER_YOUROPS_ACCESS_SECRET=

# ----------------------------------------
# Token Encryption
# ----------------------------------------
TOKEN_ENCRYPTION_KEY=
