{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 300
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/run/infiniteo",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/run/yourops?platforms=linkedin,twitter",
      "schedule": "0 15 * * 1,3,5"
    },
    {
      "path": "/api/cron/run/yourops?platforms=twitter",
      "schedule": "0 15 * * 0,2,4,6"
    },
    {
      "path": "/api/cron/run/yourops?platforms=twitter",
      "schedule": "0 20 * * *"
    }
  ]
}
