{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 300
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    { "path": "/api/cron/check", "schedule": "0 8 * * *" },
    { "path": "/api/cron/check", "schedule": "0 9 * * *" },
    { "path": "/api/cron/check", "schedule": "0 10 * * *" },
    { "path": "/api/cron/check", "schedule": "0 11 * * *" },
    { "path": "/api/cron/check", "schedule": "0 12 * * *" },
    { "path": "/api/cron/check", "schedule": "0 13 * * *" },
    { "path": "/api/cron/check", "schedule": "0 14 * * *" },
    { "path": "/api/cron/check", "schedule": "0 15 * * *" },
    { "path": "/api/cron/check", "schedule": "0 16 * * *" },
    { "path": "/api/cron/check", "schedule": "0 17 * * *" },
    { "path": "/api/cron/check", "schedule": "0 18 * * *" },
    { "path": "/api/cron/check", "schedule": "0 19 * * *" },
    { "path": "/api/cron/check", "schedule": "0 20 * * *" }
  ]
}
